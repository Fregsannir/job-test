{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@auth/(.*)": "<rootDir>/src/auth/$1",
    "@common/(.*)": "<rootDir>/src/common/$1",
    "@cryptor/(.*)": "<rootDir>/src/cryptor/$1",
    "@users/(.*)": "<rootDir>/src/users/$1"
  }
}
